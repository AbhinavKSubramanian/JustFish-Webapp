<div class="catwrap" style="position: relative; min-height: 100vh">
<fieldset>
  <legend class="legend">SIGN UP</legend>
  <div class="newprod">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
      <div>
        <%= f.label :email, :class => "prodlegend" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "pdtnametxt"  %>
      </div>
      <br>
      <div>
         <%= f.label :password, :class => "prodlegend" %><br />
    <% if @minimum_password_length %>
      <%= f.password_field :password, autocomplete: "off", :class => "pdtnametxt", :placeholder => "#{@minimum_password_length} characters minimum" %>
      </div>
      <% end %>
      <br>
      <div>
         <%= f.label :password_confirmation, :class => "prodlegend" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => "pdtnametxt" %>
      </div>
      <div class="productback">
        <%= f.submit :SIGN_UP, :class => "createbtn", :style => "color: crimson;text-shadow: none; text-shadow: 0.07vw 0 black, -0.07vw 0 black, 0 0.07vw black, 0 -0.07vw black, 0 0 0.8vw lightblue" %>
      </div>
      <% end %>
      <div class="productback">
        <%= button_to "Log in", new_session_path(resource_name), :method => "get", :class => "createbtn" %>
      </div>
       <div class="productback">
      <%= button_to 'Back to Main page', root_path, :method => "get", :class => "createbtn" %>
    </div>
  </div>
</fieldset>
</div>